{
  "name": "@storefront/details",
  "version": "1.28.4",
  "description": "StoreFront details component",
  "keywords": [
    "storefront",
    "storefront-component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/groupby/storefront-details.git"
  },
  "bugs": {
    "url": "https://github.com/groupby/storefront-details/issues"
  },
  "homepage": "https://github.com/groupby/storefront-details#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "module:esnext": "esnext/index.js",
  "files": [
    "dist/",
    "esnext/",
    "src/"
  ],
  "scripts": {
    "prepare": "install-self-peers -- --ignore-scripts",
    "build": "./scripts/build.sh",
    "start": "start-runner -p re-start/presets/typescript",
    "dev": "npm start dev",
    "test": "nyc mocha --recursive --require ts-node/register --require source-map-support/register './test/**/*.ts'",
    "tdd": "npm start tdd",
    "prepush": "npm test",
    "prepublishOnly": "npm run build",
    "docs": "typedoc src/**/*.ts",
    "docs:json": "npm run docs -- --json component.docs.json"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "restart": {
      "watchFiles": "src/**/*.{ts,html,css}",
      "copyFiles": "src/**/*.{html,css}",
      "testFiles": [
        "test/bootstrap.ts",
        "test/**/*.ts"
      ],
      "releaseOpts": {
        "public": true
      }
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  },
  "devDependencies": {
    "@storefront/testing": "1.1.0",
    "@team-griffin/install-self-peers": "^1.1.1",
    "@types/node": "^8.0.17",
    "babel": "^6.23.0",
    "chai": "^4.1.0",
    "condition-circle": "^1.5.0",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.12.1",
    "re-start": "^1.14.8",
    "source-map-support": "^0.5.9",
    "start-simple-cli": "^4.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.5.0",
    "tslint-config-groupby": "^1.0.0",
    "tslint-config-prettier": "^1.13.0",
    "typedoc": "^0.8.0",
    "typescript": "^3.1.3"
  },
  "peerDependencies": {
    "@storefront/core": "~1.47.0"
  }
}
